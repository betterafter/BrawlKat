<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5.5"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/player_player_detail_battle_log_detail_player_profile_brawler_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/player_player_detail_battle_log_detail_player_profile_brawler_level"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/level"
                android:gravity="center"
                android:text="10"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/player_player_detail_battle_log_detail_player_profile_brawler_image"
                app:layout_constraintEnd_toEndOf="@+id/player_player_detail_battle_log_detail_player_profile_brawler_image"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/player_player_detail_battle_log_detail_player_profile_brawler_image"
                app:layout_constraintTop_toTopOf="@+id/player_player_detail_battle_log_detail_player_profile_brawler_image"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/player_player_detail_battle_log_detail_player_profile_player_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/lilita_one"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/player_player_detail_battle_log_detail_player_profile_player_tag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/lilita_one"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="@color/whiteGray" />
            </LinearLayout>

            <TextView
                android:id="@+id/player_player_detail_battle_log_detail_player_profile_player_trophy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/lilita_one"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/trophiesYellow"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/player_player_detail_battle_log_star"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>