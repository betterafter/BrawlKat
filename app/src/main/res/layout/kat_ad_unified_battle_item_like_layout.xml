<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/native_ad_viewd"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:weightSum="10"
        android:background="@drawable/card_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/battle_log_ad_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/card_left"
            android:layout_weight="1"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:text="AD"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:backgroundTint="@color/trophiesYellow"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/heightMediateLayout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="8.5"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/kat_ad_layout_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="8"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/kat_ad_layout_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/kat_ad_layout_body"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="TextView"
                    android:textColor="@color/whiteGray"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/kat_ad_layout_action"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@drawable/card_right"
            android:src="@drawable/round_keyboard_arrow_right_24"
            android:backgroundTint="@color/trophiesYellow"/>

    </LinearLayout>

</com.google.android.gms.ads.formats.UnifiedNativeAdView>
